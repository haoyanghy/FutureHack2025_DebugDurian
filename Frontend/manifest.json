{
  "manifest_version": 3,
  "name": "Fake Review Detector",
  "version": "1.0",
  "description": "Detects fake reviews using AI models with screen cropping and text analysis for Shopee & Amazon",
  "permissions": [
    "activeTab",
    "scripting",
    "desktopCapture",
    "tabs",
    "storage",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/durian.png"
    }
  },
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.amazon.com/*",
    "https://*.shopee.com.my/*",
    "https://*.lazada.com.my/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.shopee.com.my/*",
        "https://*.lazada.com.my/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "32": "icons/durian.png"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }]
}