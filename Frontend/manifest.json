{
  "manifest_version": 3,
  "name": "Fake Review Detector",
  "version": "1.0",
  "description": "Detects fake reviews using BERT or RoBERTa models with screen cropping and text analysis.",
  "permissions": [
    "activeTab",
    "scripting",
    "desktopCapture"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/durian.png"
  },
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "32": "icons/durian.png"
  }
}